<h1>Listing users</h1>
<%= form_tag("/users", method: "get") do %>
  <%= label_tag(:q, "Filter by name:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Apply") %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New User', new_user_path %>
